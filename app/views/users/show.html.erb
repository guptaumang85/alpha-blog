<div class="p-3 mb-2">
  <h1 class="text-center mt-4"><%= @user.name %>'s profile</h1>
  <%= gravitar_for(@user, size: 200) %>
  <% if logged_in? && current_user == @user %>
    <div class="text-center mt-4"><%= link_to "Edit your profile", edit_user_path(@user), class: 'btn btn-warning' %></div>
  <% end %>
  <h3 class="text-center mt-4">articles</h3>
  <%= render 'articles/articles' %>
</div>