<div class="container w-50">
  <% @articles.each do |article| %>
    <div class="card text-center mt-4 shadow bg-body rounded">
      <div class="card-header fst-italic">
        by <%= link_to article.user.username, user_path(article.user)  if article.user %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.name, article_path(article) %></h5>
        <p class="card-text"><%= truncate(article.description, length: 50) %></p>
        <%= link_to "View",article_path(article), class: 'btn btn-primary' %>
        <% if logged_in? && article.user == current_user %>
          <%= link_to "Edit", edit_article_path(article), class: 'btn btn-warning' %>
          <%= link_to "Delete", article_path(article), class: 'btn btn-danger', method: :delete %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>