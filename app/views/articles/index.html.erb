<div class="bg-light p-3 mb-2">
  <h1 class="text-center mt-4">Listing all articles</h1>
  <div class="container w-50">
    <% @articles.each do |article| %>
      <div class="card text-center mt-5 shadow bg-body rounded">
        <div class="card-header fst-italic">
          by Umang Gupta
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.name, article_path(article) %></h5>
          <p class="card-text"><%= article.description %></p>
          <%= link_to "View",article_path(article), class: 'btn btn-primary' %>
          <%= link_to "Edit", edit_article_path(article), class: 'btn btn-warning' %>
          <%= link_to "Delete", article_path(article), class: 'btn btn-danger', method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>