<div class="p-3 mb-2">
  <h1 class="text-center mt-4">Categories</h1>
  <div class="container col-4 w-50">
  <% @categories.each do |category| %>
    <div class="card text-center mt-4 shadow bg-body rounded">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        <p class="card-text"><%= pluralize(category.articles.count, 'article' ) %></p>
      </div>
    </div>
  <% end %>
</div>
</div>