<div class="p-3 mb-2">
  <h1 class="text-center mt-4">Category name: <%= @category.name %></h1>
  <% if logged_in? && current_user.is_admin %>
    <div class="text-center mt-4"><%= link_to "Edit category", edit_category_path(@category), class: 'btn btn-warning' %></div>
  <% end %>
  <h3 class="text-center mt-4">articles</h3>
  <%= render 'articles/articles' %>
</div>